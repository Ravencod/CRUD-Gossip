<html>
  <body>
  <div class="container">
    <%= form_tag url_for(action: 'create'), method: "post" do %>
      <div class="form-group">
      <%= label_tag 'username', 'Username'%>
      <%= text_field_tag :anonymous_gossiper, params[:anonymous_gossiper], class: 'form-control', autofocus: true %>
      </div>
    <div class="form-group">
      <%= label_tag 'Content' %>
      <%= text_field_tag :content, params[:content], class: 'form-control', autofocus: true %>
    </div>
    <%= submit_tag "Submit", class: "btn btn-primary" %>
    <% end %>
  </body>
</html>